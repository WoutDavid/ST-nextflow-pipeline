workDir = '/path/to/work/dir/' // Here intermediate images/files will be stored, size may scale pretty fast.

params {
        /////////////////
        // User data: //
        ///////////////
        dataDir = '/path/to/root/data/directory'
        outDir = '/path/to/directory/for/output/files/'


        // Prefixes that control the input images glob patterns
        round_prefix = "Round"
        channel_prefix="c"
        extension = "tif"

        // Switches that control certain intermediate steps
        stitch = true // Whether to stitch back after each process to see the bigger picture.
        plot = true // Whether to plot auxillary images such as decoded/detected spots per tile, segmented cells per tile etc.

        // ISS specific data 
        reference = "/path/to/reference/image" 
        DAPI = "/path/to/dapi/image"
        codebook = "/path/to/codebook.csv"

        nr_rounds=5
        nr_channels=4

        //////////////////////////
        // Pipeline parameters //
        ////////////////////////
        
        // Quality Control
        spot_detectionQC=false // Whether to calculate metrics based on spot detection in the rounds 
        pixel_distance = 3

        // Tiling
        target_x_reso=2000
        target_y_reso=2000
        
        // Normalization
        clip_percentile = 80

        // White tophat filter:
        filter_radius=3

        // Spot detection:
        min_sigma = 1
        max_sigma = 10

        // Downstream analysis
        find_clusters_resolution=0.2
}

